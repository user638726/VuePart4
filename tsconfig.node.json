{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
, "eslint.config.ts"  ],
  "compilerOptions": {
     "composite": true,
    "module": "ESNext",
